<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewsApp.view.DetailPage"
             Title="Detail Page">
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="16">
                <Label x:Name="_title"/>
                <Image x:Name="_image" Aspect="AspectFit"/>
                <Label x:Name="_description"/>
                <Label x:Name="_author"/>
                <Label x:Name="_publishedAt"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>